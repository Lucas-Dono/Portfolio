{
    "apps": [
        {
            "name": "portfolio-app",
            "script": "server.js",
            "instances": 1,
            "exec_mode": "fork",
            "env": {
                "NODE_ENV": "production",
                "PORT": "5001",
                "API_PORT": "5001"
            },
            "log_date_format": "YYYY-MM-DD HH:mm:ss",
            "out_file": "logs/out.log",
            "error_file": "logs/error.log",
            "max_memory_restart": "1G",
            "watch": false,
            "merge_logs": true,
            "kill_timeout": 3000
        }
    ]
}